# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/kiaan_wms?schema=public"

# Server Configuration
# Railway automatically sets PORT - don't override it in production
PORT=8010

# JWT Secret (change in production!)
JWT_SECRET="your_super_secret_jwt_key_here_minimum_32_characters_required"

# Node Environment
NODE_ENV="development"

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
